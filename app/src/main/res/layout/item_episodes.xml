<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_episodes_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="@tools:sample/full_names"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/text_air_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="@tools:sample/full_names"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/text_episodes_full_name"
            android:textSize="20sp"/>


    <TextView
        android:id="@+id/text_episode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="@tools:sample/full_names"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/text_air_date"
        android:textSize="20sp"/>








</androidx.constraintlayout.widget.ConstraintLayout>


